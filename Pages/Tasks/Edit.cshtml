@page
@model TimeTracking.Pages.Tasks.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Issue.ID" />
            <div class="form-group">
                <label asp-for="Issue.TaskNumber" class="control-label"></label>
                <input asp-for="Issue.TaskNumber" class="form-control" />
                <span asp-validation-for="Issue.TaskNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.TaskDescription" class="control-label"></label>
                <input asp-for="Issue.TaskDescription" class="form-control" />
                <span asp-validation-for="Issue.TaskDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Estimate" class="control-label"></label>
                <input asp-for="Issue.Estimate" class="form-control" />
                <span asp-validation-for="Issue.Estimate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Remaining" class="control-label"></label>
                <input asp-for="Issue.Remaining" class="form-control" />
                <span asp-validation-for="Issue.Remaining" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Issue.Priority" class="control-label"></label>
                <select asp-for="Issue.Priority" class="form-control"
                        asp-items="@Model.TaskPrioritySL">
                    <option value="">-- Select priority --</option>
                </select>
                <span asp-validation-for="Issue.Priority" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Issue.Sprint" class="control-label"></label>
                <select asp-for="Issue.SprintID" class="form-control"
                        asp-items="@Model.SprintNumberSL">
                    <option value="">-- Select Sprint --</option>
                </select>
                <span asp-validation-for="Issue.SprintID" class="text-danger" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
