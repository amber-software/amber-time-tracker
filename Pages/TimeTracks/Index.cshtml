@page
@model TimeTracking.Pages.TimeTracks.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Time Tracks</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TimeTrack[0].Issue.TaskNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeTrack[0].SpentHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeTrack[0].TrackingDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.TimeTrack) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Issue.TaskNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpentHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrackingDate)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
